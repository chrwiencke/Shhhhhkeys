                            body: JSON.stringify(Object.fromEntries(formData))
                        });

                        const result = await response.json();
                        
                        if (result.success) {
                            this.submitted = true;
                        } else {
                            this.error = result.message;
                        }
                    } catch (err) {
                        this.error = 'An error occurred. Please try again.';
                    } finally {
                        this.loading = false;
                    }
                }
            }"
